<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/MainHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NavigationTitle"
                    fontPath="fonts/BYekan.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:background="@color/ColorPrimary"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:padding="5dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="حساب کاربری"
                    android:textColor="@color/White"
                    android:textSize="18dp" />

                <LinearLayout
                    android:id="@+id/RegisterHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/White"
                        android:orientation="vertical">

                        <TextView
                            fontPath="fonts/BYekan.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"
                            android:gravity="right"
                            android:text="نام و نام خانوادگی :"
                            android:textColor="@color/Black"
                            android:textSize="17dp" />

                        <EditText
                            android:background="@null"
                            android:id="@+id/Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="نام و نام خانوادگی"
                            android:lines="1"
                            android:maxLength="80"
                            android:singleLine="true"
                            android:textSize="17dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/White"
                        android:orientation="vertical">

                        <TextView
                            fontPath="fonts/BYekan.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"
                            android:gravity="right"
                            android:text="نام:"
                            android:textColor="@color/Black"
                            android:textSize="17dp" />

                        <EditText
                            android:background="@null"
                            android:id="@+id/Mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="تلفن همراه"
                            android:lines="1"
                            android:maxLength="80"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="17dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/White"
                        android:orientation="vertical">

                        <TextView
                            fontPath="fonts/BYekan.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"
                            android:gravity="right"
                            android:text="آدرس دقیق :"
                            android:textColor="@color/Black"
                            android:textSize="17dp" />

                        <EditText
                            android:background="@null"
                            android:id="@+id/Address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="آدرس دقیق"
                            android:lines="1"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/White"
                        android:orientation="vertical">

                        <TextView
                            fontPath="fonts/BYekan.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"
                            android:gravity="right"
                            android:text="رمز عبور فعلی:"
                            android:textColor="@color/Black"
                            android:textSize="17dp" />

                        <EditText
                            android:background="@null"
                            android:id="@+id/CurrentPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="رمز عبور فعلی"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:maxLength="80"
                            android:singleLine="true"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/White"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/changepasscheckbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="4dp"
                            android:button="@null"
                            android:drawableRight="@drawable/custom_checkbox"
                            android:gravity="center_vertical|right"
                            android:text="تغییر رمز عبور" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/changepassholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/White"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:background="@null"
                            android:id="@+id/Password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="رمز عبور جدید"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:singleLine="true"
                            android:textSize="17dp" />

                        <EditText
                            android:background="@null"
                            android:id="@+id/PasswordConfirm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="تکرار رمز عبور جدید"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:singleLine="true"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/sendholder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
android:layout_weight="1"
                            android:background="@color/Blue"
                            android:gravity="center"
                            android:onClick="Submit"
                            android:orientation="horizontal"
                            android:padding="7dp">

                            <TextView
                                android:id="@+id/sendbutton"
                                fontPath="fonts/BYekan.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:lines="1"
                                android:singleLine="true"
                                android:text="بروز رسانی تغییرات"
                                android:textColor="@color/White"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/sendImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_tikwhite" />

                            <com.pnikosis.materialishprogress.ProgressWheel xmlns:wheel="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/sendprogressbar"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                wheel:matProg_barColor="@color/ColorPrimary"
                                wheel:matProg_progressIndeterminate="true" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/logoutholder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
android:layout_weight="1"
                            android:background="@color/Red"
                            android:gravity="center"
                            android:onClick="Logout"
                            android:orientation="horizontal"
                            android:padding="7dp">

                            <TextView
                                android:id="@+id/logoutbutton"
                                fontPath="fonts/BYekan.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:lines="1"
                                android:singleLine="true"
                                android:text="خروج از حساب کاربری"
                                android:textColor="@color/White"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/logoutImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_logoutwhite" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/ColorPrimary"
        android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

</android.support.v4.widget.DrawerLayout>