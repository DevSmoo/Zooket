<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"></include>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/White">
                    <LinearLayout
                        android:id="@+id/DetailsHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:id="@+id/MainHolder"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_margin="8dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:layout_weight="2"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                fontPath="fonts/BYekan.ttf"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="right"
                                                android:gravity="right"
                                                android:textColor="@color/Black"
                                                android:text="جستجو با نام فروشگاه"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="16dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <EditText
                                            android:id="@+id/SuperName"
                                            fontPath="fonts/BYekan.ttf"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="6dp"
                                            android:hint="نام فروشگاه"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:background="@null"
                                            android:inputType="text"
                                            android:lines="1"
                                            android:singleLine="true"
                                            android:textSize="15dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_margin="8dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:layout_weight="2"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                fontPath="fonts/BYekan.ttf"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="right"
                                                android:gravity="right"
                                                android:textColor="@color/Black"
                                                android:text="جستجو با نام محصول"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="16dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <EditText
                                            android:id="@+id/ProductName"
                                            fontPath="fonts/BYekan.ttf"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="6dp"
                                            android:hint="نام محصول"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:background="@null"
                                            android:inputType="text"
                                            android:lines="1"
                                            android:singleLine="true"
                                            android:textSize="15dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_margin="8dp"
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:paddingBottom="8dp"
                                            android:layout_weight="2"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                fontPath="fonts/BYekan.ttf"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="right"
                                                android:gravity="right"
                                                android:textColor="@color/Black"
                                                android:text="جستجو با قیمت محصول"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:paddingBottom="8dp"
                                            android:paddingRight="8dp"
                                            android:layout_weight="2"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:id="@+id/StartPrice"
                                                fontPath="fonts/BYekan.ttf"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="15dp"
                                                android:layout_gravity="right"
                                                android:gravity="right"
                                                android:text="شروع قیمت از : "/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:paddingRight="8dp"
                                            android:layout_weight="2"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:id="@+id/EndPrice"
                                                fontPath="fonts/BYekan.ttf"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="15dp"
                                                android:layout_gravity="right"
                                                android:gravity="right"
                                                android:text="تا قیمت : "/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <com.appyvet.rangebar.RangeBar
                                            xmlns:custom="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/rangebar"
                                            android:layout_width="match_parent"
                                            android:layout_height="72dp"
                                            custom:tickStart="0"
                                            custom:tickInterval="1"
                                            custom:tickEnd="200"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="16dp"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_margin="8dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:layout_weight="2"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                fontPath="fonts/BYekan.ttf"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="right"
                                                android:gravity="right"
                                                android:textColor="@color/Black"
                                                android:text="جستجو با دسته بندی"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="16dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <EditText
                                            android:id="@+id/Category"
                                            fontPath="fonts/BYekan.ttf"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="6dp"
                                            android:hint="انتخاب دسته بندی"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:background="@null"
                                            android:inputType="text"
                                            android:lines="1"
                                            android:singleLine="true"
                                            android:textSize="15dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_margin="8dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:layout_weight="2"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                fontPath="fonts/BYekan.ttf"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="right"
                                                android:gravity="right"
                                                android:textColor="@color/Black"
                                                android:text="جستجو با ویژگی محصول"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="16dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <EditText
                                            android:id="@+id/Attribute"
                                            fontPath="fonts/BYekan.ttf"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="6dp"
                                            android:hint="انتخاب ویژگی"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:background="@null"
                                            android:inputType="text"
                                            android:lines="1"
                                            android:singleLine="true"
                                            android:textSize="15dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="16dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:layout_weight="2"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <CheckBox
                                                android:id="@+id/NotAvailable"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:layout_margin="4dp"
                                                android:button="@null"
                                                android:drawableRight="@drawable/custom_checkbox"
                                                android:gravity="center_vertical|right"
                                                android:text="ناموجود" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_weight="2"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <CheckBox
                                                android:id="@+id/Available"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:layout_margin="4dp"
                                                android:button="@null"
                                                android:drawableRight="@drawable/custom_checkbox"
                                                android:gravity="center_vertical|right"
                                                android:text="موجود" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/sendholder"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:background="@color/Blue"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="7dp">

                                    <TextView
                                        android:id="@+id/sendbutton"
                                        fontPath="fonts/BYekan.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:lines="1"
                                        android:text="جستجو"
                                        android:textColor="@color/White"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:id="@+id/sendImage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_tikwhite" />

                                    <com.pnikosis.materialishprogress.ProgressWheel xmlns:wheel="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/sendprogressbar"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:visibility="gone"
                                        wheel:matProg_barColor="@color/ColorPrimary"
                                        wheel:matProg_progressIndeterminate="true" />

                                </LinearLayout>

                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ContainerSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/ItemSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </LinearLayout>

                <!--notfound-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/NothingFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                   >

                    <smo.zooket.Util.SizeAdjustingTextView
                        fontPath="fonts/BYekan.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="موردی یافت نشد"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>

            <com.melnykov.fab.FloatingActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Refresh"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_margin="10dp"
                android:src="@drawable/ic_searchwhite"
                fab:fab_colorNormal="@color/ColorPrimary"
                fab:fab_colorPressed="@color/ColorPrimaryDark"
                fab:fab_colorRipple="#99FFFFFF" />

        </FrameLayout>

    </LinearLayout>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/ColorPrimary"
        android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.DrawerLayout>